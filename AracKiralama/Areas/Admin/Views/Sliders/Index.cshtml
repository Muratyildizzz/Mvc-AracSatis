@model IEnumerable<AracSatis.Entities.Slider>

@{
    ViewData["Title"] = "Slider Yönetimi";
}

<h1>Slider Yönetimi</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Yeni Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Baslık)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Acıklama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Baslık)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Acıklama)
            </td>
                <td>
                  <img src="/Img/Slider/@item.Resim" alt="" height="34" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
             <td>
                  <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                  <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
             </td>
        </tr>
}
    </tbody>
</table>
